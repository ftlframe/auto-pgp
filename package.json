{
  "name": "auto-pgp",
  "displayName": "Auto pgp",
  "version": "0.0.1",
  "description": "Chrome extension that automatically encrypts/decrypts messages...",
  "author": "fltframe@mailfence.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@inboxsdk/core": "^2.2.8",
    "@plasmohq/storage": "^1.15.0",
    "openpgp": "^6.2.2",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.258",
    "@types/inboxsdk": "^2.0.14",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "scripting"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "@inboxsdk/core/pageWorld.js"
        ],
        "matches": [
          "https://mail.google.com/*",
          "https://inbox.google.com/*"
        ]
      }
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "auto-pgp@fltframe.com"
      }
    }
  }
}